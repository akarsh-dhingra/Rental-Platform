<% layout("/layouts/boilerplate")%>
<body>
<div>
    <div class="col-8 offset-2">
    <h3>Create New listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
        <lable for="title" 
        class="form-label">Title</lable>
        <input name="listing[title]"
        placeholder="Add a catchy title" 
        class="form-control" 
        type="text" 
        required
        />
    <div class="valid-feedback">
      Looks good!
    </div>
        </div>

        <div class="mb-3">
        <label for="description" 
        class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control"
        placeholder="Enter description" required></textarea>   
        <div class="valid-feedback">
      Enter the valid text!
       </div> 
        </div>

        <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" 
        placeholder="Enter Image URL/LINK"
        type="url"
        class="form-control"
        >
      <div class="invalid-feedback">
        Image Invalid.
      </div>
        </div>

        <div class="row">
        <div class="mb-3">
        <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="Enter Price:" type="number" class="form-control" required> 
        </div>  
       <div class="invalid-feedback">
        Please enter the price.
       </div>   
        </div>
        <div class="mb-3 col-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]"
         placeholder="Enter Country"
        type="text"
        class="form-control"
         required>  
        </div> 
      <div class="invalid-feedback">
        Please enter the country name.
      </div>
      </div>

        <div class="mb-3">
        <label for="location" class="form-label">location</label>
        <input name="listing[location]" 
        placeholder="Enter location" 
        type="text"
        class="form-control"
        required>  
        <div class="invalid-feedback">
        Please enter the Location name.
       </div>    
        </div>

        <br>
        <button>Add</button> 
    </form>
    </div>
</div>
</body>