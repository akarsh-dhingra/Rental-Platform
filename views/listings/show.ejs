<% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2">

     
    <h3>Listing Details</h3>
  <div class="card col-6" style="width: 18rem">
  <img src="<%= listing.image?.url || listing.image || '' %>" class="card-img-top show-img" style="height:20rem" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
        <b><%=listing.title%></b> <br>
        <%=listing.description%><br>
        &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
        <%=listing.location%><br>
        <%=listing.country%><br>
    </p>
  </div>
</div>
    <br>
    <div class="col-3">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn">Edit this listing</a>
    <br><br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark">Delete this listing</button>
    </form>
    </div>
   </div>
 </div>